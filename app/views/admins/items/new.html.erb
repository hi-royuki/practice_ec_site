<!--商品（ぶどうの品種）の追加ページ-->

<h1>商品追加ページ</h1>
<%= form_with model: @item, url: admins_items_path, local: true do |f| %>
<h4>商品名</h4>
<%= f.text_field :item_name %>
<h4>商品画像</h4>
<%= f.attachment_field  :image %>
<h4>説明</h4>
<%= f.text_area :introduction %>
<h4>税抜価格</h4>
<%= f.text_field :no_tax_price %>
<h4>販売ステータス</h4>
<%= f.select :is_active,{販売中:false, 販売停止:true} %>
<%= f.submit '投稿' %>
<% end %>