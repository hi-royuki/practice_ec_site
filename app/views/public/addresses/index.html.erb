<h1>配送先登録・一覧</h1>
 <%= form_with model: @address, url: public_addresses_path(@address), local: true do |f| %>
 <table class="table table-borderless">
   <div class="form-group ">
     <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code, autofocus: true, placeholder: "000000" %></td>
      </tr>
    </div>

   <div class="form-group ">
     <tr>
       <th>住所</th>
       <td><%= f.text_field :prefecture_code, autofocus: true, placeholder: "東京都" %></td>
       <td><%= f.text_field :city, autofocus: true, placeholder: "新宿区" %></td>
       <td><%= f.text_field :street, autofocus: true, placeholder: "新宿1-5-4" %></td>
       <td><%= f.text_field :other_address, autofocus: true, placeholder: "マンション１０１" %></td>
      </tr>
   </div>
   <div class="form-group ">
     <tr>
       <th>宛名</th>
       <td><%= f.text_field :name, autofocus: true, placeholder: "令和太郎" %></td>
       
      </tr>
      <td><%= f.submit "新規登録", class: "btn btn-primary"%></td>
   </div>
  </table>
 <% end %>
